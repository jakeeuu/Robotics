<launch>

  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
        <!-- Parameters -->
        <param name="base_frame" value="base_link"/>
        <param name="odom_frame" value="odom"/>
        <param name="map_frame" value="map"/>

        <!-- Topic Remappings -->
        <remap from="scan" to="/base_scan"/>
        <remap from="odom" to="/ugv/odom"/>

        <param name="xmax" value="5"/> <!--questi altri parametri sono per ridurre la size della mappa da far visualizzare su gmapping-->
        <param name="ymax" value="5"/> <!--la size di default Ã¨ molto grande e quindi la nostra mappa, molto piccola occupererebbe solo un piccolo pezzo di questo spazio-->
        <param name="xmin" value="-5"/>
        <param name="ymin" value="-5"/>
        <param name="delta" value="0.05"/>

    </node>

</launch>